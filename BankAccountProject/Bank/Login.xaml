<Window x:Class="Bank.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank"
        mc:Ignorable="d"
        Title="Login Window" Height="400" Width="800">
    <StackPanel Margin="20">
       
        <TextBlock Text="ID" FontSize="30"/>
        <TextBox x:Name="txtID" Margin="0,10,0,20" Height="40" FontSize="30"  />
        <TextBlock Text="Password" FontSize="30"/>
        <PasswordBox x:Name="txtPassword" Margin="0,10,0,30" Height="40" FontSize="30"/>
        <Button x:Name="btnLogin" Content="Login" Height="50" FontSize="30" Click="btnLogin_Click"/>
       
    </StackPanel>
    
</Window>
